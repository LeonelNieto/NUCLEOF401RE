{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with OpenOCD",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "device": "STM32F401RE",
            "configFiles": [
                "C:/openocd/openocd/scripts/interface/stlink.cfg",
                "C:/openocd/openocd/scripts/target/stm32f4x.cfg"
            ]
        }
    ]
}



